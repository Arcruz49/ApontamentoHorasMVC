  <script>
    lucide.createIcons();

    const diasSemana = ['domingo', 'segunda-feira', 'terÃ§a-feira', 'quarta-feira', 'quinta-feira', 'sexta-feira', 'sÃ¡bado'];

    function atualizarHora() {
      const agora = new Date();
      $('#horaAtual').text(agora.toLocaleTimeString('pt-BR'));
      $('#dataAtual').text(agora.toLocaleDateString('pt-BR'));
      $('#diaSemana').text(diasSemana[agora.getDay()]);
    }

    function preencherTabela() {


      $.ajax({
        url: "/Apontamento/GetApontamentosAnteriores",    
        type: "GET",
        success: function (response) {
          if (response.success === true) {
            response.data.forEach(d => {
              const dataFormatada = new Date(d.data).toLocaleDateString('pt-BR');

              const tempoFormatado = d.tempo.substring(0, 5);
              let saldoFormatado = '+' + d.saldo.substring(0, 5);
              if(d.saldo.includes('-')){
                saldoFormatado = d.saldo.substring(0, 6);
              }

              const corStatus = d.status === "ConcluÃ­do" 
                ? "bg-green-500/20 text-green-400" 
                : d.status === "Excedente" 
                ? "bg-blue-500/20 text-blue-400" 
                : "bg-yellow-500/20 text-yellow-400";

              $('#tabelaDias').append(`
                <tr class="border-b border-gray-800 hover:bg-white/5 transition grid grid-cols-2 md:table-row text-sm py-3">
                  <td>${dataFormatada}</td>
                  <td>${tempoFormatado}</td>
                  <td class="hidden md:table-cell">${saldoFormatado}</td>
                  <td>
                    <span class="px-2 py-1 text-xs rounded-full ${corStatus}">
                      ${d.status}
                    </span>
                  </td>
                </tr>
              `);
            });
          } else {
            $("#btnMarcarPonto").prop("disabled", false);
            notyf.success(response.message);
          }
        },
        error: function (xhr, status, error) {
          notyf.error("Erro ao buscar registros: " + error);
        }
      });


    }


    function getSaldoHoras(){
      $.ajax({
        url: "/Apontamento/GetSaldoHoras",    
        type: "GET",
        success: function (response) {
          if(response.success == true){

            if(response.positive == true){
              $('.saldoHoras').addClass('text-green-400');
              $('.saldoHoras').removeClass('text-red-400');
              $('.saldoHoras').html('+' + response.data);

            } 
            else{
              $('.saldoHoras').removeClass('text-green-400');
              $('.saldoHoras').addClass('text-red-400');
              $('.saldoHoras').html('-' + response.data);
            }

          }
          else {
            notyf.success(response.message);
          }
        },
        error: function (xhr, status, error) {
          notyf.error("Erro ao buscar saldo: " + error);
        }
      });
    }

    function GetLastApontamento() {
      $.ajax({
          url: "/Apontamento/GetLastApontamento",
          type: "GET",
          success: function (response) {
              if (response.success === true && response.data) {
                  const data = new Date(response.data);

                  const dia = String(data.getDate()).padStart(2, '0');
                  const mes = String(data.getMonth() + 1).padStart(2, '0');
                  const ano = data.getFullYear();
                  const hora = String(data.getHours()).padStart(2, '0');
                  const min = String(data.getMinutes()).padStart(2, '0');

                  const dataFormatada = `${dia}/${mes}/${ano}  ${hora}:${min}`;

                  $(".ultimoPonto").text(dataFormatada);
                  $(".lastPontoDiv").removeClass("hidden");
              } else {
                  $(".lastPontoDiv p.text-xl").text("Nenhum registro encontrado");
              }
          },
          error: function (xhr, status, error) {
              notyf.error("Erro ao obter Ãºltimo ponto: " + error);
          }
      });
    }


    function GetStatusTrabalho() {
      $.ajax({
          url: "/Apontamento/GetStatusTrabalho",
        type: "GET",
          success: function (response) {
            console.log(response)
              if (response.success === true) {
                $('.statusTrabalho').text(response.message);
              } 
              else {
                console.log(response.message);
              }

              $('#tempoRestante').text(response.horasTrabalhadas); 

          },
          error: function (xhr, status, error) {
              notyf.error("Erro ao obter Ãºltimo ponto: " + error);
          }
      });
    }


    $(document).ready(() => {
      atualizarHora();
      preencherTabela();
      getSaldoHoras();
      GetLastApontamento();
      GetStatusTrabalho();
      setInterval(atualizarHora, 1000);

      // Mobile sidebar toggle
      $('#openSidebar').on('click', () => $('#sidebar').removeClass('hidden-mobile'));
      $('#closeSidebar').on('click', () => $('#sidebar').addClass('hidden-mobile'));

      // Inicia sidebar oculta no mobile
      if (window.innerWidth < 768) $('#sidebar').addClass('hidden-mobile');
    });
  </script>

